{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "mocha",
    "coverage": "nyc mocha",
    "start": "npx tsc-watch --onSuccess \"node --inspect node_modules/@google-cloud/functions-framework --target=finalPrice\"",
    "deploy": "npx tsc && gcloud functions deploy finalPrice --verbosity debug --source dist --runtime nodejs8 --trigger-http --region europe-west2"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/puppeteer": "2.0.0",
    "@google-cloud/functions-framework": "^1.2.1",
    "prettier": "1.18.2",
    "source-map-support": "0.5.13",
    "ts-node": "8.3.0",
    "tsc-watch": "^2.4.0",
    "typescript": "3.7.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  },
  "private": true,
  "dependencies": {
    "chrome-aws-lambda": "2.0.2",
    "iltorb": "^2.4.5",
    "puppeteer": "2.1.1"
  }
}
